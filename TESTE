SELECT RA_MAT, RA_NOMECMP, CTT_DESC01, RA_ADMISSA, RF_DATABAS, RF_DATAFIM, CONVERT(DATE, DateAdd(day, +1, RF_DATAFIM)) AS INICIO_PERIODO, CONVERT(DATE,DateAdd(year, +1, RF_DATABAS)) as MES_COMPETENCIA, CONVERT(DATE,DATEADD(yy,+1,DATEADD(mm,-1, RF_DATAFIM))) AS MES_LIMITE, SUBSTRING(RF_DATAINI,1,6) AS MES_FERIAS, RF_DATAINI, CONVERT(DATE,DateAdd(day, +30, RF_DATAINI)) AS DATA_TERMINO, CONVERT(DATE,DateAdd(day, +31, RF_DATAINI)) AS DATA_RETORNO
FROM SRF090
	INNER JOIN SRA090 SRA ON RA_MAT = RF_MAT AND SRA.D_E_L_E_T_ = '' AND RA_CATFUNC IN ('M', 'C', 'H') AND RA_SITFOLH <> 'D'
	INNER JOIN CTT090 CTT ON RA_CC = CTT_CUSTO AND CTT.D_E_L_E_T_ = ''
WHERE RF_DATAINI BETWEEN '20180101' AND '20180601'
ORDER BY RA_NOMECMP
